<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="#fff">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/card_bg"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Simple Title Text "
            android:textColor="@color/title_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_discription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_alignStart="@+id/tv_title"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/content_text_color" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:text="TextView"
            android:textColor="@color/content_text_color" />

        <TextView
            android:id="@+id/tv_kordinate1"
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_discription"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="32dp"
            android:layout_toStartOf="@+id/tv_date"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_koordinate2"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_above="@+id/tv_discription"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:layout_toStartOf="@+id/tv_date"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_entfernung"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_discription"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="2dp"
            android:layout_toStartOf="@+id/textkm"
            android:textAlignment="textEnd"
            android:textColor="@color/content_text_color" />

        <TextView
            android:id="@+id/textEntfernung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_discription"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="1dp"
            android:layout_toStartOf="@+id/tv_entfernung"
            android:text="Entfernung"
            android:textAlignment="textEnd"
            android:textColor="@color/content_text_color" />

        <TextView
            android:id="@+id/textkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_discription"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="-66dp"
            android:layout_toStartOf="@+id/tv_date"
            android:text="km"
            android:textColor="@color/content_text_color" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="44dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"

        android:layout_marginEnd="8dp"
        android:adjustViewBounds="false"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout"
        app:srcCompat="@mipmap/ic_launcher" />
</android.support.constraint.ConstraintLayout>